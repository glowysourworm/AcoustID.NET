<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>AcoustID.NET</PackageId>
    <Description>AcoustID fingerprinter and webservice access.</Description>
    <Product>AcoustID</Product>
    <Copyright>Copyright Â© Christian Woltering 2016-2019</Copyright>
    <Authors>Christian Woltering</Authors>
    <PackageProjectUrl>https://github.com/wo80/AcoustID.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/wo80/AcoustID.NET</RepositoryUrl>
    <AssemblyVersion>1.3.3.0</AssemblyVersion>
    <FileVersion>1.3.3.0</FileVersion>
    <PackageTags>music audio fingerprint acoustid chromaprint</PackageTags>
    <Version>1.3.3</Version>
    <AssemblyName>AcoustID</AssemblyName>
    <RootNamespace>AcoustID</RootNamespace>
    <Configurations>Debug;Release</Configurations>
    <PackageLicenseUrl>https://github.com/acoustid/chromaprint/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageOutputPath>$(NugetLocalPath)</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
